<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorRegistration">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="470dp"
        android:layout_height="123dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045"
        app:srcCompat="@drawable/docsiact" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="410dp"
        android:layout_height="611dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="310dp"
                android:layout_height="match_parent"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:text="Enter your Email ID"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextTextEmailAddress2"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/edittext"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Email ID"
                android:inputType="textEmailAddress"
                android:paddingStart="20dp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:text="Create your Password:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextTextPassword3"
                android:layout_width="348dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/edittext"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="15dp" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:text="Enter your Doctor ID"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextText20"
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/edittext"
                android:ems="10"
                android:hint="Doctor ID"
                android:inputType="text"
                android:paddingStart="15dp" />

            <TextView
                android:id="@+id/textView55"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:text="Already have an account? "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView56"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="65dp"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:text="Click here to Login!"
                android:textColor="#0922FF"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/lato_black"
                android:paddingTop="30dp"
                android:text="Enter your details here:"
                android:textColor="#1837D3"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:text="Enter your Full Name:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextText18"
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/edittext"

                android:ems="10"
                android:hint="Full Name"
                android:inputType="text"
                android:paddingStart="15dp" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:text="Enter your Birthday"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextText22"
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/edittext"

                android:ems="10"
                android:hint="dd/mm/yyyy"
                android:inputType="text"
                android:paddingStart="15dp" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:text="Enter your Hospital/Clinic Name"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextText21"
                android:layout_width="358dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/edittext"

                android:ems="10"
                android:hint="Hospital/Clinic"
                android:inputType="text"
                android:paddingStart="15dp" />

            <Button
                android:id="@+id/button11"
                android:layout_width="296dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="#3345EE"
                android:onClick="saveNote"
                android:text="Click here to Register"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="60dp"
                android:backgroundTint="#3345EE"
                android:text="Sign up"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="116dp"
                android:layout_height="67dp"
                android:layout_marginStart="310dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.954"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.975"
                app:srcCompat="@drawable/logo" />

        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>